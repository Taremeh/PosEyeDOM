{
    "manifest_version": 3,
    "name": "PosEyeDOM",
    "version": "2.0",
    "permissions": ["scripting", "storage", "tabs", "windows"],
    "host_permissions": [
    "*://*.github.dev/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.github.dev/*"],
        "js": ["content.js"],
        "run_at": "document_start",
        "all_frames": true
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "View and Export Logs"
    }
  }
  